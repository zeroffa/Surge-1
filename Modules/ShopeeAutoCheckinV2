[Script]
cron "55 11 * * *" script-path=https://kinta.ma/surge/scripts/shopee_update_cookie.js, wake-system=1, timeout=30
cron "58 11 * * *" script-path=https://kinta.ma/surge/scripts/shopee_checkin.js, wake-system=1, timeout=30
cron "0 12 * * *" script-path=https://kinta.ma/surge/scripts/shopee_luckydraw.js, wake-system=1, timeout=30
